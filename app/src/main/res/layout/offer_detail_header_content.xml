<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:background="@drawable/shape_gradient_background">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/offer_detail_title"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/offer_detail_bought_count"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@sample/offers.json/data/partner/name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/offer_detail_bought_count"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="51 Vendidos"
        app:layout_constraintBottom_toTopOf="@+id/offer_detail_descriptions"
        app:layout_constraintStart_toStartOf="@+id/offer_detail_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/offer_detail_descriptions"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/offer_detail_bought_count"
        tools:text="@sample/offers.json/data/short_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
